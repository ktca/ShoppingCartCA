@model List<ShoppingCartCA.Models.ProductModel>

@foreach (var product in Model)
{
    <div class="col-md-4" style="text-align:center;">
        <img src="@product.ImagePath" width="50%;" height="50%;"  />
        <h2>@product.ProductName</h2>
        <p style="text-align:left;">
            @product.Description
        </p>
        <p>
            <a class="btn btn-success" style="text-decoration:none;" onclick="AddToCart(@product.ProductID)">
                <i class="glyphicon glyphicon-shopping-cart"></i>
                $@decimal.Round(product.Price, 2).ToString() - Add To Cart &raquo;
            </a>
            
        </p>
    </div>
    
}
